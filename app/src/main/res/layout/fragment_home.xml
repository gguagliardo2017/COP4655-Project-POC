<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/maybe"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CryptoFav3" />

    <TextView
        android:id="@+id/CryptoFav2"
        android:layout_width="355dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_rounded"
        android:gravity="center|top"
        android:padding="20dp"
        android:text="Crypto 2"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/CryptoFav3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CryptoFav1" />

    <TextView
        android:id="@+id/CryptoFav1"
        android:layout_width="355dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_rounded"
        android:gravity="center|top"
        android:padding="20dp"
        android:text="Crypto"
        android:textColor="#FFFFFF"
        android:textColorLink="#813E3E"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/CryptoFav2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CryptoFav3"
        android:layout_width="355dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_rounded"
        android:gravity="center|top"
        android:padding="20dp"
        android:text="Crypto 3"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CryptoFav2" />


</androidx.constraintlayout.widget.ConstraintLayout>